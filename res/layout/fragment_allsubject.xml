<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:focusable="true"
    android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="科目"
            android:background="#FFFFFF"
            android:textColor="#888888"
            android:textSize="15sp" />
        
        <com.wangyi.widget.LessonListLayout 
            android:id="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@+id/lessonTitle"></com.wangyi.widget.LessonListLayout>
		<View
		    android:layout_below="@+id/lessons"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#cccccc" />

		<ListView
		    android:id="@+id/booklist"
		    android:layout_below="@+id/lessons"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" />

		<com.wangyi.widget.KeywordsFlow
		    android:id="@+id/keywordsflow"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#50000000"
		    android:visibility="gone" >
		</com.wangyi.widget.KeywordsFlow>

		<RelativeLayout
		    android:id="@+id/relativeLayout1"
		    android:layout_width="match_parent"
		    android:layout_height="70dp"
		    android:background="@drawable/bg_allsubject" >

		    <RelativeLayout
		        android:id="@+id/search"
		        android:layout_width="310dp"
		        android:layout_height="45dp"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        android:background="@drawable/bg_allsubject_search"
		        android:paddingLeft="10dp" >

		        <Button
		            android:id="@+id/search_enter"
		            android:layout_width="25dp"
		            android:layout_height="25dp"
		            android:layout_centerVertical="true"
		            android:background="@drawable/ic_allsubject_search"
		            android:text="  " />

		        <EditText
		            android:id="@+id/search_edit"
		            android:layout_width="260dp"
		            android:layout_height="match_parent"
		            android:layout_alignBaseline="@+id/search_enter"
		            android:layout_alignBottom="@+id/search_enter"
		            android:layout_toRightOf="@+id/search_enter"
		            android:background="#00000000"
		            android:ems="10"
		            android:focusable="true"
		            android:focusableInTouchMode="true"
		            android:hint="搜索你感兴趣的课程"
		            android:textColor="#FF000000" />
		    </RelativeLayout>
		</RelativeLayout>

</RelativeLayout>