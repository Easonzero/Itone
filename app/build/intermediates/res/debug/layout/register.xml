<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec" >
    <RelativeLayout
        	android:id="@+id/relativeLayout1"
        	android:layout_width="match_parent"
        	android:layout_height="70dp"
        	android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        	android:background="#307e56" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="IT1帐号注册"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/back"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/register_back" />

        <Button
            android:id="@+id/confirm"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/register_confirm" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/register_top"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="95dp"
            android:layout_weight="2"
            android:src="@drawable/register_addpic" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/passWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/confirmPassWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/register_top"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_bottom"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
