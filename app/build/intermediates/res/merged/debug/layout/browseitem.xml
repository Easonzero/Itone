<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:id="@+id/item_left"
        android:background="@drawable/apptheme_list_selector_holo_light" >

        <RelativeLayout
            android:id="@+id/item_icon_layout"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/padding_step1" >

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:background="@color/md_light_blue"
                android:padding="0dp"
                android:scaleType="centerCrop" />

            <com.wangyi.UIview.widget.ScrollingTextView
                android:id="@+id/item_icontitle"
                style="@style/Typography_Headline"
                android:fontFamily="sans-serif-thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="marquee"
        		android:marqueeRepeatLimit="marquee_forever"
        		android:scrollHorizontally="true"
        		android:textSize="10sp"
                android:text="A" />
		</RelativeLayout>

        <TextView
            android:id="@+id/item_title"
            style="@style/Typography_Subhead2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="0dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:ellipsize="middle"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:text="test"
            android:textColor="@color/typography_color_text" />

        <ImageView
            android:id="@+id/moreoverflowMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_step_s"
            android:src="@drawable/ic_menu_moreoverflow_note" />

    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="#8E8E8E" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#FFFFFF" />
   </RelativeLayout>
</LinearLayout>